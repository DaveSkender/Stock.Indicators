{
  // key references:
  // https://code.visualstudio.com/docs/devcontainers/create-dev-container
  // https://github.com/devcontainers/images/blob/main/src/dotnet
  // https://github.com/devcontainers/features
  "$schema": "https://raw.githubusercontent.com/devcontainers/spec/main/schemas/devContainer.schema.json",
  "name": "Stock Indicators Dev Container",
  "image": "mcr.microsoft.com/dotnet/sdk:9.0",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "installOhMyZsh": true,
      "configureZshAsDefaultShell": true,
      "username": "vscode",
      "upgradePackages": true
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest",
      "ppa": true
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "24.10.0"
    },
    "ghcr.io/devcontainers/features/ruby:1": {
      "version": "3.3"
    },
    "ghcr.io/devcontainers-extra/features/uv:1": {
      "version": "latest"
    }
  },
  "remoteEnv": {
    "PATH": "${containerEnv:HOME}/.local/bin:${containerEnv:HOME}/.dotnet/tools:${containerEnv:PATH}"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "chat.mcp.autostart": "never",
        "chat.tools.global.autoApprove": true,
        "terminal.integrated.defaultProfile.linux": "zsh"
      },
      "extensions": [
        "bierner.github-markdown-preview",
        "CodeRabbit.coderabbit-vscode",
        "DavidAnson.vscode-markdownlint",
        "DotJoshJohnson.xml",
        "EditorConfig.EditorConfig",
        "github.vscode-github-actions",
        "GitHub.copilot",
        "ms-dotnettools.vscodeintellicode-csharp",
        "redhat.vscode-yaml"
      ]
    }
  },
  "postCreateCommand": ".devcontainer/startup.sh",
  "remoteUser": "vscode"
}
