{
  "$schema": "https://www.schemastore.org/package",
  "name": "stock-indicators",
  "description": "Stock Indicators for .NET",
  "homepage": "https://stockindicators.dev",
  "repository": {
    "type": "github",
    "url": "https://github.com/DaveSkender/Stock.Indicators"
  },
  "author": {
    "name": "DaveSkender",
    "url": "https://github.com/DaveSkender"
  },
  "funding": "https://github.com/sponsors/facioquo",
  "license": "Apache-2.0",
  "private": false,
  "packageManager": "npm@11.6.2",
  "engines": {
    "node": ">=24.10.0",
    "npm": ">=11.6.2"
  },
  "scripts": {
    "build": "dotnet build",
    "clean": "bash tools/scripts/clean.sh",
    "lint": "bash tools/scripts/lint-all.sh",
    "lint:fix": "npm run lint:code:fix && npm run lint:md:fix",
    "lint:code": "bash tools/scripts/lint-code-check.sh",
    "lint:code:fix": "bash tools/scripts/lint-code-fix.sh",
    "lint:md": "markdownlint-cli2",
    "lint:md:fix": "markdownlint-cli2 --fix",
    "fixall": "npm run lint:fix",
    "test": "dotnet test --no-restore",
    "test:coverage": "dotnet test --collect:\"Code Coverage\" --no-restore --nologo"
  },
  "devDependencies": {
    "@codacy/codacy-mcp": "^0.6.18",
    "markdownlint-cli2": "^0.18.1"
  }
}
