{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Doc Site: Open with LiveReload",
      "type": "shell",
      "command": "bundle exec jekyll serve --livereload --open-url",
      "dependsOn": "Doc Site: Update Ruby Packages",
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}/docs",
        "env": {
          "BUNDLE_GEMFILE": "${workspaceFolder}/docs/Gemfile",
          "BUNDLE_PATH": "${workspaceFolder}/docs/vendor/bundle"
        }
      },
      "group": "none",
      "problemMatcher": []
    },
    {
      "label": "Doc Site: Update Ruby Packages",
      "type": "shell",
      "command": "bundle install --jobs 4 && bundle update --conservative && bundle clean --force",
      "options": {
        "cwd": "${workspaceFolder}/docs",
        "env": {
          "BUNDLE_GEMFILE": "${workspaceFolder}/docs/Gemfile",
          "BUNDLE_PATH": "${workspaceFolder}/docs/vendor/bundle"
        }
      },
      "group": "none",
      "problemMatcher": []
    }
  ]
}
