{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "MkDocs: build",
      "type": "shell",
      "command": "python",
      "args": [
        "-m",
        "mkdocs",
        "build",
        "--clean"
      ],
      "options": {
        "cwd": "${workspaceFolder}/docs"
      },
      "problemMatcher": []
    },
    {
      "label": "MkDocs: serve",
      "type": "shell",
      "command": "python",
      "args": [
        "-m",
        "mkdocs",
        "serve",
        "-a",
        "127.0.0.1:8000"
      ],
      "options": {
        "cwd": "${workspaceFolder}/docs"
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "mkdocs-serve",
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": ".*Serving on*"
        }
      },
      "dependsOn": [
        "MkDocs: build"
      ],
      "dependsOrder": "sequence",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "MkDocs: open-browser",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-Command",
        "Start-Process http://127.0.0.1:8000"
      ],
      "options": {
        "cwd": "${workspaceFolder}/docs"
      },
      "problemMatcher": [],
      "dependsOn": [
        "MkDocs: serve"
      ],
      "dependsOrder": "sequence"
    },
    {
      "label": "Build Project",
      "type": "shell",
      "command": "dotnet build Stock.Indicators.sln",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Run Unit Tests",
      "type": "shell",
      "command": "dotnet test tests --filter \"TestCategory=Unit\"",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Run Integration Tests",
      "type": "shell",
      "command": "dotnet test tests --filter \"TestCategory=Integration\"",
      "group": "test",
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Run Performance Tests",
      "type": "shell",
      "command": "dotnet test tests --filter \"TestCategory=Performance\"",
      "group": "test",
      "problemMatcher": "$msCompile"
    }
  ]
}
