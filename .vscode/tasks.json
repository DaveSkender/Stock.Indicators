{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build MkDocs Documentation",
            "type": "shell",
            "command": "python -m mkdocs build",
            "options": {
                "cwd": "${workspaceFolder}/docs"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Serve MkDocs Documentation",
            "type": "shell",
            "command": "python -m mkdocs serve",
            "options": {
                "cwd": "${workspaceFolder}/docs"
            },
            "group": "build",
            "problemMatcher": [],
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Build Project",
            "type": "shell",
            "command": "dotnet build Stock.Indicators.sln",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Run Unit Tests",
            "type": "shell",
            "command": "dotnet test tests --filter \"TestCategory=Unit\"",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Run Integration Tests",
            "type": "shell",
            "command": "dotnet test tests --filter \"TestCategory=Integration\"",
            "group": "test",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Run Performance Tests",
            "type": "shell",
            "command": "dotnet test tests --filter \"TestCategory=Performance\"",
            "group": "test",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Fix MkDocs Documentation Issues",
            "type": "shell",
            "command": "python -m mkdocs build -v",
            "options": {
                "cwd": "${workspaceFolder}/docs"
            },
            "group": "build",
            "problemMatcher": {
                "owner": "mkdocs",
                "fileLocation": ["relative", "${workspaceFolder}/docs"],
                "pattern": {
                    "regexp": "^(.*)\\s+in\\s+(.*?)\\s+[(](.*):(\\d+)[)]$",
                    "message": 1,
                    "file": 2,
                    "line": 4
                }
            }
        },
        {
            "label": "Build and Serve MkDocs",
            "type": "shell",
            "command": "echo 'Starting MkDocs server...' && (sleep 3; python -m webbrowser http://127.0.0.1:8000) & python -m mkdocs serve -a 127.0.0.1:8000",
            "options": {
                "cwd": "${workspaceFolder}/docs"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        }
    ]
}
