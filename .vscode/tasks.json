{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install: .NET Packages",
      "type": "shell",
      "command": "dotnet restore \"${workspaceFolder}/Stock.Indicators.sln\"",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "none",
      "problemMatcher": [
        "$msCompile"
      ]
    },
    {
      "label": "Build: .NET Solution",
      "type": "shell",
      "command": "dotnet build \"${workspaceFolder}/Stock.Indicators.sln\" --no-restore -v minimal --nologo",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$msCompile"
      ],
      "dependsOn": "Install: .NET Packages",
      "dependsOrder": "sequence"
    },
    {
      "label": "Test: .NET Solution",
      "type": "shell",
      "command": "dotnet test \"${workspaceFolder}/Stock.Indicators.sln\" --no-restore --nologo",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": [],
      "dependsOn": "Install: .NET Packages",
      "dependsOrder": "sequence"
    }
  ]
}
