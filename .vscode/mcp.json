{
  "servers": {
    "cloudflare": {
      "type": "stdio",
      "command": "npx",
      "args": ["mcp-remote@latest","https://docs.mcp.cloudflare.com/mcp"]
    },
    "codacy": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y","@codacy/codacy-mcp@latest"],
      "env": {
        "CODACY_ACCOUNT_TOKEN": "${input:codacy_account_token}"
      }
    },
    "context7": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y","@upstash/context7-mcp@latest"]
    },
    "mslearn": {
      "type": "http",
      "url": "https://learn.microsoft.com/api/mcp"
    },
    "playwright": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y","playwright","run-test-mcp-server"]
    }
  },
  "inputs": [
    {
      "id": "codacy_account_token",
      "type": "promptString",
      "description": "Your personal Codacy Account API token (from app.codacy.com â†’ Account). Required.",
      "password": true
    }
  ]
}
