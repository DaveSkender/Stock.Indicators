{
    // file settings
    "files.exclude": {
        "**/.vs/**": true,
        "**/bin/**": true,
        "**/obj/**": true,
        "**/_site/**": true,
        "**/TestResults/**": true,
        "**/*.csproj.user": true
    },
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 3000,

    "search.exclude": {}, // auto includes files.exclude

    // editor settings
    "editor.codeLens": false,
    "editor.formatOnPaste": true,

    // language settings
    "dotnet-test-explorer.testProjectPath": "**/*Tests*.csproj",
    "python.enableFormatting.black": true,
    "python.formatting.provider": "black",
    "scss.validate": false  // false-positives with Jekyll front matter
}