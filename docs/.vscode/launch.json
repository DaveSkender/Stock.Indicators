{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Chrome against localhost",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}/docs",
      "preLaunchTask": "ng: serve"
    },
    {
      "name": "Launch Chrome against localhost (no task)",
      "type": "chrome", 
      "request": "launch",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}/docs"
    },
    {
      "name": "Attach to Chrome",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "webRoot": "${workspaceFolder}/docs"
    }
  ]
}